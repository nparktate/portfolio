---
import Base from '../layouts/Base.astro';
import Folder from '../components/Folder.astro';
import GridContainer from '../components/GridContainer.astro';
---

<Base title="Nicholas Park â€” Motion Designer" description="Motion Designer & Creative Technologist">
  <div class="min-h-screen bg-white">
    <!-- Header -->
    <header class="border-b border-gray-200">
      <GridContainer>
        <div class="col-span-16 py-8">
          <h1 class="font-mono text-2xl font-bold text-gray-900 tracking-tight">
            NICHOLAS PARK
          </h1>
          <p class="font-mono text-sm text-gray-600 mt-2">
            MOTION DESIGNER & CREATIVE TECHNOLOGIST
          </p>
        </div>
      </GridContainer>
    </header>

    <!-- Main content area -->
    <section class="py-16">
      <GridContainer>
        <!-- Current directory indicator -->
        <div class="col-span-16 mb-8">
          <p class="font-mono text-sm text-gray-500 flex items-center">
            <span class="text-gray-400">~/</span>
            <span class="ml-1 w-2 h-4 bg-gray-900 animate-pulse"></span>
          </p>
        </div>

        <!-- Folder grid -->
        <div class="col-span-16 grid grid-cols-16 gap-4">
          <Folder 
            name="ABOUT" 
            path="/about" 
            size="large"
            gridSpan={4}
          />
          
          <Folder 
            name="WORK" 
            path="/work" 
            size="large"
            gridSpan={4}
          />
          
          <Folder 
            name="EXPERIENCE" 
            path="/experience" 
            size="large"
            gridSpan={4}
          />
          
          <Folder 
            name="REEL" 
            path="/reel" 
            size="large"
            gridSpan={4}
          />
          
          <Folder 
            name="CONTACT" 
            path="/contact" 
            size="medium"
            gridSpan={3}
          />
          
          <Folder 
            name="RESUME.PDF" 
            path="/resume" 
            size="medium"
            gridSpan={3}
          />
          
          <!-- Quick stats -->
          <div class="col-span-6 h-20 bg-gray-900 text-white flex flex-col justify-center px-4 font-mono">
            <div class="text-xs text-gray-400 uppercase">STATUS</div>
            <div class="text-sm font-medium">AVAILABLE FOR WORK</div>
          </div>
          
          <div class="col-span-4 h-20 bg-gray-100 flex flex-col justify-center px-4 font-mono border border-gray-200">
            <div class="text-xs text-gray-400 uppercase">LOCATION</div>
            <div class="text-sm font-medium text-gray-900">LOS ANGELES, CA</div>
          </div>
        </div>

        <!-- System info -->
        <div class="col-span-16 mt-16 pt-8 border-t border-gray-200">
          <div class="grid grid-cols-16 gap-4 font-mono text-xs text-gray-500">
            <div class="col-span-4">
              LAST MODIFIED: 2025.01.XX
            </div>
            <div class="col-span-4">
              SIZE: ~5MB
            </div>
            <div class="col-span-4">
              TYPE: PORTFOLIO
            </div>
            <div class="col-span-4">
              VERSION: 10.0
            </div>
          </div>
        </div>
      </GridContainer>
    </section>
  </div>
</Base>