---
import Base from '../layouts/Base.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import GridContainer from '../components/GridContainer.astro';

const projects = [
  {
    title: "The Last of Us S2 Podcast Visuals",
    client: "HBO / Warner Bros. Discovery",
    year: "2024",
    type: "Motion Graphics",
    description: "Created highly-praised marketing promo visuals and looping platform content for HBO's official companion podcast.",
    tags: ["Motion Design", "After Effects", "HBO"],
    status: "Featured Work"
  },
  {
    title: "White Lotus S3 Visuals",
    client: "HBO / Warner Bros. Discovery", 
    year: "2024",
    type: "Generative Design",
    description: "Designed well-received promotional visuals featuring custom generative ink effects created in After Effects.",
    tags: ["Generative Effects", "After Effects", "HBO"],
    status: "Recent"
  },
  {
    title: "DC Studios Showcase",
    client: "Warner Bros. Discovery",
    year: "2024", 
    type: "GFX Package",
    description: "Delivered a comprehensive GFX suite for the DC Studios Showcase podcast, a significant undertaking with complex design requirements.",
    tags: ["GFX Package", "Motion Design", "DC"],
    status: "Major Project"
  },
  {
    title: "Nike D/N Global Launch",
    client: "NIKE, Inc.",
    year: "2023",
    type: "VFX Direction",
    description: "Led the design and coordination of VFX/GFX for promotional videos for Nike's global product launch campaign.",
    tags: ["VFX Direction", "Global Campaign", "360° Video"],
    status: "Contract Work"
  },
  {
    title: "HBO Max AR Filters",
    client: "HBO Max",
    year: "2021-2022",
    type: "AR Development", 
    description: "Created interactive AR filters for major franchises using Instagram's Spark AR and TikTok's Effect House.",
    tags: ["AR Development", "Spark AR", "Effect House"],
    status: "2M+ Interactions"
  },
  {
    title: "Universal Music Lyric Videos",
    client: "Universal Music Group",
    year: "2021-2022",
    type: "Music Videos",
    description: "Produced animated lyric videos for recording artists Jeremy Zucker and Alexander 23 using motion tracking and 3D projection.",
    tags: ["Kinetic Typography", "Motion Tracking", "3D"],
    status: "21M+ Views"
  }
];
---

<Base title="Work — Nicholas Park" description="Selected work and projects by Nicholas Park">
  <div class="min-h-screen bg-white">
    <!-- Navigation breadcrumb -->
    <header class="border-b border-gray-200">
      <GridContainer>
        <Breadcrumb path={[]} current="work" />
      </GridContainer>
    </header>

    <!-- Main content -->
    <section class="py-16">
      <GridContainer>
        <!-- Title section -->
        <div class="col-span-16 mb-16">
          <h1 class="font-mono text-4xl font-bold text-gray-900 mb-4 uppercase">
            Selected Work
          </h1>
          <div class="grid grid-cols-16 gap-4">
            <div class="col-span-8">
              <p class="font-mono text-lg text-gray-700 leading-8">
                A curated selection of motion graphics, VFX, and creative technology projects 
                spanning entertainment, music, and brand campaigns.
              </p>
            </div>
            <div class="col-span-4">
              <div class="font-mono text-sm text-gray-500 space-y-2">
                <div>TOTAL PROJECTS: {projects.length}</div>
                <div>YEARS ACTIVE: 2020 - 2024</div>
                <div>COMBINED VIEWS: 21M+</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Filter/Sort bar -->
        <div class="col-span-16 mb-12 border-b border-gray-200 pb-4">
          <div class="grid grid-cols-16 gap-4 items-center">
            <div class="col-span-4">
              <div class="font-mono text-sm text-gray-500 uppercase">Filter by:</div>
            </div>
            <div class="col-span-12 flex space-x-4 font-mono text-sm">
              <button class="px-3 py-1 bg-gray-900 text-white">ALL</button>
              <button class="px-3 py-1 text-gray-600 hover:text-gray-900">MOTION</button>
              <button class="px-3 py-1 text-gray-600 hover:text-gray-900">VFX</button>
              <button class="px-3 py-1 text-gray-600 hover:text-gray-900">AR</button>
              <button class="px-3 py-1 text-gray-600 hover:text-gray-900">RECENT</button>
            </div>
          </div>
        </div>

        <!-- Projects grid -->
        <div class="col-span-16">
          <div class="space-y-8">
            {projects.map((project, index) => (
              <div class="grid grid-cols-16 gap-4 border-b border-gray-100 pb-8 last:border-b-0">
                <!-- Project number -->
                <div class="col-span-1">
                  <div class="font-mono text-sm text-gray-400 leading-6">
                    {String(index + 1).padStart(2, '0')}
                  </div>
                </div>

                <!-- Project info -->
                <div class="col-span-11">
                  <div class="space-y-4">
                    <!-- Title and status -->
                    <div class="flex items-start justify-between">
                      <h3 class="font-mono text-xl font-bold text-gray-900 leading-6">
                        {project.title}
                      </h3>
                      <span class="font-mono text-xs text-gray-500 uppercase bg-gray-100 px-2 py-1 ml-4">
                        {project.status}
                      </span>
                    </div>

                    <!-- Client and meta -->
                    <div class="grid grid-cols-11 gap-4 font-mono text-sm text-gray-600">
                      <div class="col-span-4">
                        <span class="text-gray-400 uppercase">Client:</span> {project.client}
                      </div>
                      <div class="col-span-3">
                        <span class="text-gray-400 uppercase">Year:</span> {project.year}
                      </div>
                      <div class="col-span-4">
                        <span class="text-gray-400 uppercase">Type:</span> {project.type}
                      </div>
                    </div>

                    <!-- Description -->
                    <p class="font-mono text-base text-gray-700 leading-6 max-w-2xl">
                      {project.description}
                    </p>

                    <!-- Tags -->
                    <div class="flex flex-wrap gap-2">
                      {project.tags.map(tag => (
                        <span class="font-mono text-xs text-gray-600 bg-gray-50 border border-gray-200 px-2 py-1 uppercase">
                          {tag}
                        </span>
                      ))}
                    </div>
                  </div>
                </div>

                <!-- Visual placeholder -->
                <div class="col-span-4">
                  <div class="aspect-video bg-gray-100 border border-gray-200 flex items-center justify-center">
                    <div class="font-mono text-xs text-gray-400 text-center">
                      <div class="mb-1">VISUAL</div>
                      <div>PLACEHOLDER</div>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Archive section -->
        <div class="col-span-16 mt-16 pt-16 border-t border-gray-200">
          <div class="grid grid-cols-16 gap-4">
            <div class="col-span-8">
              <h2 class="font-mono text-xl font-bold text-gray-900 mb-4 uppercase">
                Archive & Early Work
              </h2>
              <p class="font-mono text-base text-gray-700 leading-6">
                Additional projects and experimental work from 2019-2020, including 
                early motion graphics, personal projects, and client work during RISD studies.
              </p>
            </div>
            <div class="col-span-8">
              <div class="grid grid-cols-8 gap-4">
                <div class="col-span-4 bg-gray-50 border border-gray-200 p-4 text-center">
                  <div class="font-mono text-lg font-bold text-gray-900 mb-1">15+</div>
                  <div class="font-mono text-xs text-gray-600 uppercase">Archived Projects</div>
                </div>
                <div class="col-span-4 bg-gray-900 text-white p-4 text-center">
                  <div class="font-mono text-lg font-bold mb-1">RISD</div>
                  <div class="font-mono text-xs text-gray-300 uppercase">Student Work</div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- System info -->
        <div class="col-span-16 mt-16 pt-8 border-t border-gray-200">
          <div class="grid grid-cols-16 gap-4 font-mono text-xs text-gray-500">
            <div class="col-span-4">
              LAST UPDATED: 2024.12.XX
            </div>
            <div class="col-span-4">
              PROJECTS SHOWN: {projects.length}
            </div>
            <div class="col-span-4">
              TOTAL VIEWS: 21M+
            </div>
            <div class="col-span-4">
              STATUS: ACTIVE
            </div>
          </div>
        </div>
      </GridContainer>
    </section>
  </div>
</Base>