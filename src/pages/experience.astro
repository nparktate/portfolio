---
import Base from '../layouts/Base.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import GridContainer from '../components/GridContainer.astro';

const experiences = [
  {
    title: "Motion Designer",
    company: "Warner Bros. Discovery",
    period: "Oct 2022 - Present",
    duration: "2+ Years",
    location: "Los Angeles, CA",
    type: "Full-time",
    description: "Create motion graphics and visual content for HBO and Max Original programming. Develop modular After Effects toolkits to streamline versioning and localization across marketing assets while maintaining brand consistency.",
    achievements: [
      "Created highly-praised podcast visuals for The Last of Us Season 2",
      "Designed White Lotus S3 visuals with custom generative ink effects", 
      "Delivered comprehensive GFX suite for DC Studios Showcase podcast",
      "Maintained brand consistency across 15+ major show campaigns"
    ],
    skills: ["After Effects", "Motion Graphics", "Brand Systems", "Podcast Visuals"]
  },
  {
    title: "Motion Designer", 
    company: "Warner Bros. Discovery (HBO Max)",
    period: "Oct 2020 - Oct 2022",
    duration: "2 Years",
    location: "Los Angeles, CA", 
    type: "Full-time",
    description: "Developed graphics and animations for HBO Max's streaming originals marketing, from official podcast visuals to supplementary motion graphics for show launch campaigns.",
    achievements: [
      "Contributed to key art design on 50+ shows and podcasts",
      "Created image extensions and promotional artwork cut-downs",
      "Pioneered branded AR filters for social media campaigns",
      "Collaborated with cross-functional teams as design generalist"
    ],
    skills: ["Motion Graphics", "Key Art Design", "AR Development", "Campaign Design"]
  },
  {
    title: "VFX Director & Visual Designer",
    company: "NIKE, Inc.",
    period: "Feb 2023 - Mar 2023", 
    duration: "2 Months",
    location: "Contract",
    type: "Contract",
    description: "Led the design and coordination of VFX/GFX for a series of five short-form promotional videos and a final sizzle reel as part of the NIKE D/N global launch campaign.",
    achievements: [
      "Defined visual style and motion language for global campaign",
      "Coordinated international production team across multiple locations",
      "Executed advanced post-production including 360° video reframing",
      "Delivered immersive visuals through rotoscoping and compositing"
    ],
    skills: ["VFX Direction", "360° Video", "Global Campaigns", "Team Leadership"]
  },
  {
    title: "Motion Graphics Artist",
    company: "Universal Music Group", 
    period: "Mar 2021 - Jan 2022",
    duration: "11 Months",
    location: "Freelance",
    type: "Freelance",
    description: "Produced animated lyric videos for six different album releases by major recording artists (Jeremy Zucker and Alexander 23), accumulating over 21 million views across YouTube and social media.",
    achievements: [
      "Created 6 lyric videos with 21M+ combined views",
      "Balanced artist visual brands with creative typography",
      "Utilized motion tracking and 3D camera projection techniques",
      "Integrated lyrics seamlessly into live-action footage"
    ],
    skills: ["Lyric Videos", "Motion Tracking", "3D Projection", "Music Industry"]
  },
  {
    title: "Web Developer",
    company: "Katkoot Italia",
    period: "Dec 2021 - Mar 2022",
    duration: "4 Months", 
    location: "Freelance",
    type: "Freelance",
    description: "Developed a full-stack e-commerce website for a luxury Italian wine brand, building a custom CMS and backend to support dynamic content updates.",
    achievements: [
      "Built full-stack e-commerce platform from scratch",
      "Implemented automated article publishing workflows",
      "Created adaptive SEO features for improved visibility",
      "Designed rich UI animations for engaging user interaction"
    ],
    skills: ["Full-stack Development", "E-commerce", "CMS", "UI Animation"]
  }
];
---

<Base title="Experience — Nicholas Park" description="Professional experience and career timeline">
  <div class="min-h-screen bg-white">
    <!-- Navigation breadcrumb -->
    <header class="border-b border-gray-200">
      <GridContainer>
        <Breadcrumb path={[]} current="experience" />
      </GridContainer>
    </header>

    <!-- Main content -->
    <section class="py-16">
      <GridContainer>
        <!-- Title section -->
        <div class="col-span-16 mb-16">
          <h1 class="font-mono text-4xl font-bold text-gray-900 mb-4 uppercase">
            Professional Experience
          </h1>
          <div class="grid grid-cols-16 gap-4">
            <div class="col-span-8">
              <p class="font-mono text-lg text-gray-700 leading-8">
                5+ years of motion design and creative technology experience across 
                entertainment, music, and global brand campaigns.
              </p>
            </div>
            <div class="col-span-4">
              <div class="font-mono text-sm text-gray-500 space-y-2">
                <div>TOTAL POSITIONS: {experiences.length}</div>
                <div>CAREER START: 2020</div>
                <div>CURRENT STATUS: EMPLOYED</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Timeline -->
        <div class="col-span-16">
          <div class="space-y-12">
            {experiences.map((exp, index) => (
              <div class="grid grid-cols-16 gap-4 relative">
                <!-- Timeline connector -->
                {index < experiences.length - 1 && (
                  <div class="absolute left-4 top-24 w-px h-20 bg-gray-200"></div>
                )}
                
                <!-- Timeline dot -->
                <div class="col-span-1 flex justify-center pt-6">
                  <div class="w-3 h-3 bg-gray-900 rounded-full relative">
                    <div class="absolute inset-0 w-3 h-3 bg-gray-900 rounded-full animate-ping opacity-20"></div>
                  </div>
                </div>

                <!-- Experience content -->
                <div class="col-span-15">
                  <div class="grid grid-cols-15 gap-4">
                    <!-- Main info -->
                    <div class="col-span-9">
                      <!-- Period and type -->
                      <div class="flex items-center space-x-4 mb-2">
                        <span class="font-mono text-sm text-gray-500 bg-gray-100 px-2 py-1 uppercase">
                          {exp.period}
                        </span>
                        <span class="font-mono text-xs text-gray-400 uppercase">
                          {exp.duration} • {exp.type}
                        </span>
                      </div>

                      <!-- Title and company -->
                      <h3 class="font-mono text-2xl font-bold text-gray-900 mb-1">
                        {exp.title}
                      </h3>
                      <p class="font-mono text-lg text-gray-700 mb-4">
                        {exp.company}
                      </p>

                      <!-- Description -->
                      <p class="font-mono text-base text-gray-700 leading-6 mb-6">
                        {exp.description}
                      </p>

                      <!-- Achievements -->
                      <div class="mb-6">
                        <h4 class="font-mono text-sm text-gray-500 uppercase mb-3">
                          Key Achievements
                        </h4>
                        <div class="space-y-2">
                          {exp.achievements.map(achievement => (
                            <div class="flex items-start">
                              <span class="w-2 h-2 bg-gray-400 rounded-full mt-2 mr-3 flex-shrink-0"></span>
                              <span class="font-mono text-sm text-gray-700 leading-5">
                                {achievement}
                              </span>
                            </div>
                          ))}
                        </div>
                      </div>

                      <!-- Skills -->
                      <div>
                        <h4 class="font-mono text-sm text-gray-500 uppercase mb-3">
                          Skills & Technologies
                        </h4>
                        <div class="flex flex-wrap gap-2">
                          {exp.skills.map(skill => (
                            <span class="font-mono text-xs text-gray-600 bg-gray-50 border border-gray-200 px-2 py-1 uppercase">
                              {skill}
                            </span>
                          ))}
                        </div>
                      </div>
                    </div>

                    <!-- Meta info -->
                    <div class="col-span-6">
                      <div class="bg-gray-50 border border-gray-200 p-6 h-fit">
                        <div class="space-y-4 font-mono text-sm">
                          <div>
                            <span class="text-gray-500 uppercase block mb-1">Location</span>
                            <span class="text-gray-900">{exp.location}</span>
                          </div>
                          <div>
                            <span class="text-gray-500 uppercase block mb-1">Employment</span>
                            <span class="text-gray-900">{exp.type}</span>
                          </div>
                          <div>
                            <span class="text-gray-500 uppercase block mb-1">Duration</span>
                            <span class="text-gray-900">{exp.duration}</span>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Education section -->
        <div class="col-span-16 mt-24 pt-16 border-t border-gray-200">
          <h2 class="font-mono text-2xl font-bold text-gray-900 mb-8 uppercase">
            Education
          </h2>
          
          <div class="grid grid-cols-16 gap-4">
            <div class="col-span-1 flex justify-center pt-6">
              <div class="w-3 h-3 bg-gray-400 rounded-full"></div>
            </div>
            
            <div class="col-span-15">
              <div class="grid grid-cols-15 gap-4">
                <div class="col-span-9">
                  <div class="flex items-center space-x-4 mb-2">
                    <span class="font-mono text-sm text-gray-500 bg-gray-100 px-2 py-1 uppercase">
                      2017 - 2021
                    </span>
                    <span class="font-mono text-xs text-gray-400 uppercase">
                      4 Years • Bachelor's Degree
                    </span>
                  </div>
                  
                  <h3 class="font-mono text-2xl font-bold text-gray-900 mb-1">
                    B.F.A. in Graphic Design
                  </h3>
                  <p class="font-mono text-lg text-gray-700 mb-4">
                    Rhode Island School of Design (RISD)
                  </p>
                  
                  <p class="font-mono text-base text-gray-700 leading-6 mb-6">
                    Graduated with Graphic Design Honors (GPA 3.7/4.0). Coursework emphasized 
                    motion design, interactive media, and visual communication. Active in 
                    cross-disciplinary collaborations, including science communication 
                    projects with Brown University.
                  </p>
                  
                  <div class="flex flex-wrap gap-2">
                    <span class="font-mono text-xs text-gray-600 bg-gray-50 border border-gray-200 px-2 py-1 uppercase">Motion Design</span>
                    <span class="font-mono text-xs text-gray-600 bg-gray-50 border border-gray-200 px-2 py-1 uppercase">Interactive Media</span>
                    <span class="font-mono text-xs text-gray-600 bg-gray-50 border border-gray-200 px-2 py-1 uppercase">Visual Communication</span>
                    <span class="font-mono text-xs text-gray-600 bg-gray-50 border border-gray-200 px-2 py-1 uppercase">Honors Program</span>
                  </div>
                </div>
                
                <div class="col-span-6">
                  <div class="bg-gray-900 text-white p-6 h-fit">
                    <div class="space-y-4 font-mono text-sm">
                      <div>
                        <span class="text-gray-300 uppercase block mb-1">Institution</span>
                        <span class="text-white">RISD</span>
                      </div>
                      <div>
                        <span class="text-gray-300 uppercase block mb-1">Degree</span>
                        <span class="text-white">Bachelor of Fine Arts</span>
                      </div>
                      <div>
                        <span class="text-gray-300 uppercase block mb-1">GPA</span>
                        <span class="text-white">3.7 / 4.0</span>
                      </div>
                      <div>
                        <span class="text-gray-300 uppercase block mb-1">Status</span>
                        <span class="text-white">Honors Graduate</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- System info -->
        <div class="col-span-16 mt-16 pt-8 border-t border-gray-200">
          <div class="grid grid-cols-16 gap-4 font-mono text-xs text-gray-500">
            <div class="col-span-4">
              CAREER START: 2020
            </div>
            <div class="col-span-4">
              TOTAL EXPERIENCE: 5+ Years
            </div>
            <div class="col-span-4">
              CURRENT ROLE: Motion Designer
            </div>
            <div class="col-span-4">
              STATUS: EMPLOYED
            </div>
          </div>
        </div>
      </GridContainer>
    </section>
  </div>
</Base>