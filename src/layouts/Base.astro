---
import "../styles/global.css";
---

<!doctype html>
<html lang="en" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta
            name="description"
            content="Nicholas Park - Motion Designer & Creative Technologist showcasing selected works and professional journey"
        />
        <meta name="generator" content={Astro.generator} />

        <!-- Google Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600&display=swap" rel="stylesheet">
        
        <!-- Custom styles -->
        <style is:global>
            /* Ensure fonts load properly with stronger specificity */
            body {
                font-family: 'Inter', system-ui, -apple-system, sans-serif !important;
            }
            
            .font-sans {
                font-family: 'Inter', system-ui, -apple-system, sans-serif !important;
            }
            
            .font-serif, h1, h2, h3, h4, h5, h6 {
                font-family: 'Playfair Display', Georgia, serif !important;
            }
            
            /* Font weight classes need stronger specificity */
            .font-light { font-weight: 300 !important; }
            .font-normal { font-weight: 400 !important; }
            .font-medium { font-weight: 500 !important; }
            .font-semibold { font-weight: 600 !important; }
            .font-bold { font-weight: 700 !important; }
            .italic { font-style: italic !important; }
        </style>

        <!-- Favicon -->
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

        <title>Nicholas Park — Motion Designer & Creative Technologist</title>

        <!-- Open Graph / Social Media Meta Tags -->
        <meta property="og:title" content="Nicholas Park — Motion Designer & Creative Technologist" />
        <meta
            property="og:description"
            content="Explore the work of Nicholas Park, a multidisciplinary designer with experience at HBO, Nike, and Universal Music Group"
        />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://nicktp.com" />
        <!-- <meta property="og:image" content="https://nicktp.com/og-image.jpg" /> -->

        <!-- Preload critical assets -->
        <link rel="preload" href="/fade.js" as="script" />

        <slot name="head" />
    </head>
    <body class="font-sans bg-white text-gray-900 min-h-screen antialiased">
        <slot />

        <footer class="border-t border-gray-100 py-16 mt-32">
            <div class="max-w-5xl mx-auto px-6">
                <div class="flex flex-col md:flex-row justify-between items-center">
                    <div class="mb-6 md:mb-0">
                        <h3 class="text-2xl font-serif font-bold mb-2">Nicholas Park</h3>
                        <p class="text-gray-600">Motion Designer & Creative Technologist</p>
                    </div>
                    <div class="flex space-x-8">
                        <a href="mailto:nparktate@gmail.com" class="text-gray-600 hover:text-primary-600 transition-colors duration-300">
                            <span class="sr-only">Email</span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                        </a>
                        <a href="https://www.linkedin.com/in/linkparkdesign/" target="_blank" rel="noopener" class="text-gray-600 hover:text-primary-600 transition-colors duration-300">
                            <span class="sr-only">LinkedIn</span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                            </svg>
                        </a>
                    </div>
                </div>
                <div class="mt-10 pt-8 border-t border-gray-100 text-center text-gray-500">
                    © {new Date().getFullYear()} Nicholas Park. All rights reserved.
                </div>
            </div>
        </footer>

        <!-- Animation scripts -->
        <script src="/fade.js" defer></script>
    </body>
</html>
