---
export interface Props {
  path: string[];
  current: string;
}

const { path, current } = Astro.props;
---

<nav class="col-span-16 h-12 flex items-center font-mono text-sm text-gray-600 border-b border-gray-200 mb-8">
  <!-- Root indicator -->
  <span class="text-gray-400">~/</span>
  
  <!-- Path segments -->
  {path.map((segment: string, index: number) => (
    <span class="flex items-center">
      <span class="mx-1 text-gray-300">/</span>
      <a 
        href={index === 0 ? '/' : `/${path.slice(0, index + 1).join('/')}`}
        class="hover:text-gray-900 transition-colors duration-200 px-1"
      >
        {segment}
      </a>
    </span>
  ))}
  
  <!-- Current location -->
  {current && (
    <span class="flex items-center">
      <span class="mx-1 text-gray-300">/</span>
      <span class="text-gray-900 font-medium px-1">{current}</span>
    </span>
  )}
  
  <!-- Cursor blink -->
  <span class="ml-1 w-2 h-4 bg-gray-900 animate-pulse"></span>
</nav>