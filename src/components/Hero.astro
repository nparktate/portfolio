<section class="hero-section min-h-screen flex flex-col items-center justify-center relative py-16 px-4 bg-gradient-to-b from-white to-gray-50 js-fade">
    <div class="max-w-5xl w-full">
        <div class="relative z-10">
            <div class="flex flex-col md:flex-row md:items-end md:justify-between">
                <div>
                    <span class="inline-block py-1 px-3 bg-primary-100 text-primary-800 text-xs font-medium tracking-wider rounded mb-6">PORTFOLIO</span>
                    <h1 class="hero-title text-6xl md:text-8xl lg:text-[10rem] font-serif font-bold tracking-tight leading-[0.9] text-gray-900 mb-3">
                        Nicholas<br class="hidden md:block" /> Park
                    </h1>
                </div>
                <div class="mt-8 md:mt-0 md:text-right">
                    <div class="h-1 w-16 bg-primary-500 mb-6 md:ml-auto"></div>
                    <p class="hero-subtitle text-2xl md:text-3xl text-gray-700 font-serif italic">
                        Motion Designer<br />& Creative Technologist
                    </p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Scroll indicator -->
    <div class="absolute bottom-12 left-1/2 transform -translate-x-1/2 animate-bounce">
        <div class="w-12 h-12 rounded-full border-2 border-primary-500 flex items-center justify-center hero-button hover-lift">
            <svg 
                xmlns="http://www.w3.org/2000/svg" 
                width="20" 
                height="20" 
                viewBox="0 0 24 24" 
                fill="none" 
                stroke="currentColor" 
                stroke-width="2.5" 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                class="text-primary-500"
            >
                <path d="m6 9 6 6 6-6"></path>
            </svg>
        </div>
    </div>
</section>