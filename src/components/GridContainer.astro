---
export interface Props {
  columns?: number;
  gap?: number;
  className?: string;
}

const { columns = 16, gap = 4, className = '' } = Astro.props;

const gridClass = `grid-cols-${columns}`;
const gapClass = `gap-${gap}`;
---

<div class={`
  grid 
  ${gridClass} 
  ${gapClass} 
  max-w-screen-xl 
  mx-auto 
  px-4 
  ${className}
`}>
  <slot />
</div>